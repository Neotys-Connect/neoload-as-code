{
    "yaml.schemas": {
        "file:///home/orasilabs/neoload-as-code/training/resources/as-code.latest.schema.json": "*.nl.yaml",
        "file:///home/orasilabs/neoload-as-code/training/resources/as-code.latest.schema.json": "default.yaml"
    },
    "yaml.schemaStore.enable": false,
    "yaml.format.enable": true,
    "yaml.validate": true,
    "yaml.hover": true,
    "yaml.completion": true,
    "runOnSave.statusMessageTimeout": 3000,
    "runOnSave.commands": [
        {
            "globMatch": "**/*.nl.yaml",
            "commandBeforeSaving": "clear",
            "command": "neoload validate --schema-url ${workspaceFolder}/training/resources/as-code.latest.schema.json ${fileDirname}",
            "runIn": "terminal",
            "runningStatusMessage": "Validating NeoLoad DSL syntax",
            "finishStatusMessage": "Validation finished: $?"
        }
    ]
}